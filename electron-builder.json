{
  "appId": "com.react.vault.manager",
  "productName": "React Vault Manager",
  "directories": {
    "output": "dist-electron/release",
    "buildResources": "src"
  },
  "icon": "assets/logo-1024x1024.png",
  "files": [
    "build/electron/**/*",
    "main.cjs",
    "preload.cjs"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.productivity",
    "icon": "password_manager_icons/icon_transparent.icns"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "category": "Office",
    "synopsis": "A secure password vault manager",
    "icon": "password_manager_icons/128x128@x2.png"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/logo-1024x1024.png"
  },
  "portable": {
    "artifactName": "React-Vault-Manager-Portable.exe"
  }
}