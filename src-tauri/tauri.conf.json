{
  "build": {
    "beforeBuildCommand": "npm run build:tauri",
    "frontendDist": "../build/tauri"
  },
  "productName": "React Vault Manager",
  "version": "1.0.0",
  "identifier": "com.react.vault.manager",
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/logo-144x144.png",
      "icons/logo-192x192.png",
      "icons/logo-512x512.png",
      "icons/logo.ico"
    ],
    "category": "DeveloperTool"
  },
  "plugins": {
    "updater": {
      "active": false
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "React Vault Manager",
        "width": 1000,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": false
  }
}
