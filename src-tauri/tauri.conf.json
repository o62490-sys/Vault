{
  "build": {
    "beforeBuildCommand": "npm run build:tauri",
    "frontendDist": "../build/tauri"
  },
  "productName": "React Vault Manager",
  "version": "1.0.0",
  "identifier": "com.react.vault.manager",
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "A secure password vault manager",
    "longDescription": "A secure, client-side password manager built with React and TypeScript",
    "copyright": "Copyright Â© 2025 React Vault Manager Team. All rights reserved.",
    "publisher": "React Vault Manager Team",
    "homepage": "https://github.com/yourusername/react-vault-manager"
  },
  "plugins": {
    "updater": {
      "active": false
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "React Vault Manager",
        "width": 1000,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": false
  }
}
